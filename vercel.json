{
    "version": 2,
    "builds": [
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/bookings(.*)",
            "destination": "/backend/app/main.py"
        },
        {
            "source": "/docs",
            "destination": "/backend/app/main.py"
        },
        {
            "source": "/openapi.json",
            "destination": "/backend/app/main.py"
        },
        {
            "source": "(.*)",
            "destination": "/frontend/index.html"
        }
    ]
}